<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>




    </style>
    <style name="Fuxk_28px_TextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/dd_dimen_28px</item>
    </style>

    <style name="Fuxk_Base_Content_28_Style" parent="@style/Fuxk_28px_TextView">
        <item name="android:textColor">@color/fuxk_base_color_black</item>
    </style>


    <style name="courseTableText">
        <item name="android:textColor">#4b3b85</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SubHeadTextGray">
        <item name="android:textColor">#ffb5b6b6</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PageHeaderShadow">
        <item name="android:background">@drawable/bg_header_shadow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="TitleBarText" >
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>


    <style name="BtnMainFuncText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#616161</item>
    </style>
</resources>
